#!/bin/bash
#
# Valgrind Customisations
#

VALGRIND=`which valgrind`
alias valmem="$VALGRIND --smc-check=all --leak-check=full --log-file=valgrind-mem.log "
alias valchk="$VALGRIND --smc-check=all --leak-check=no --log-file=valgrind-chk.log "
alias valdrd="$VALGRIND --smc-check=all --tool=drd --log-file=valgrind-drd.log"

alias .valgrind=". ~/.bash_valgrind"
